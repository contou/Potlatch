<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/keyline_1"
    android:layout_height="match_parent">
    <com.cong.potlatch.ui.widget.BezelImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/navdrawer_profile_image_size"
        android:layout_height="@dimen/navdrawer_profile_image_size"
        android:src="@drawable/person_image_empty"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/keyline_1"
        app:maskDrawable="@drawable/circle_mask"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/creator"
        android:textSize="@dimen/text_size_large"
        android:fontFamily="@string/font_fontFamily_medium"
        android:textColor="@color/body_text_1"
        android:layout_alignTop="@+id/profile_image"
        android:layout_marginLeft="@dimen/keyline_2"
        android:text="@string/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/content"
        android:text="@string/about_eula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creator"
        android:layout_alignLeft="@+id/creator"
        android:layout_alignStart="@+id/creator" />

</RelativeLayout>